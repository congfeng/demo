<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MsgDao">
	
	<insert id="insert" parameterType="com.cf.code.entity.Msg">
        INSERT INTO msg(ct,ut,status,user_id,community_id,scope,bang_num,share_num,comment_num,content,image1,image2,image3,image4,image5,image6)
        VALUES (UNIX_TIMESTAMP(NOW()),UNIX_TIMESTAMP(NOW()),#{status},#{userId},#{communityId},#{scope},#{bangNum},#{shareNum},#{commentNum}
        	,#{content},#{image1},#{image2},#{image3},#{image4},#{image5},#{image6})
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER" statementType="STATEMENT">
            select last_insert_id()
        </selectKey>
    </insert>
    
    <delete id="delete">
        DELETE FROM msg WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
    <update id="update">
        UPDATE msg 
           SET ut = UNIX_TIMESTAMP(NOW())
           ,scope = #{scope}
         WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <update id="updateStatus">
        UPDATE msg
           SET ut = UNIX_TIMESTAMP(NOW())
           ,status = #{status}
         WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <update id="updateCounter">
        UPDATE msg
           SET ut = UNIX_TIMESTAMP(NOW())
           <if test="bangNum != null">,bang_num = bang_num + #{bangNum}</if>
           <if test="shareNum != null">,share_num = share_num + #{shareNum}</if>
           <if test="commentNum != null">,comment_num = comment_num + #{commentNum}</if>
         WHERE id = #{id,jdbcType=INTEGER}
    </update>
	
</mapper>