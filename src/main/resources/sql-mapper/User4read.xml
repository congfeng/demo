<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.UserDao">
	
	<resultMap id="UserResult" type="com.cf.code.entity.User">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="ut" column="ut" />
		<result property="status" column="status" />
		<result property="phone" column="phone" />
		<result property="password" column="password" />
		<result property="isTemple" column="is_temple" />
		<result property="nick" column="nick" />
		<result property="portrait" column="portrait" />
		<result property="cover" column="cover" />
		<result property="description" column="description" />
		<result property="levelName" column="level_name" />
		<result property="level" column="level" />
		<result property="score" column="score" />
		<result property="merits" column="merits" />
		<result property="prayNum" column="pray_num" />
		<result property="clientId" column="client_id" />
		<result property="unionId" column="union_id" />
	</resultMap>
	
	<select id="find" resultMap="UserResult">
        SELECT *
          FROM user
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="UserResult" >
       SELECT *
         FROM user
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="UserResult" >
       SELECT *
         FROM user
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM user
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
    
    <select id="findByPhone" resultMap="UserResult">
        SELECT *
          FROM user
         WHERE phone = #{phone}
    </select>
    
    <select id="findByClientId" resultMap="UserResult">
        SELECT *
          FROM user
         WHERE id = #{id,jdbcType=INTEGER}
           AND client_id = #{clientId}
    </select>
    
    <select id="findByUnionId" resultMap="UserResult">
        SELECT *
          FROM user
         WHERE union_id = #{unionId}
         LIMIT 1
    </select>
	
</mapper>