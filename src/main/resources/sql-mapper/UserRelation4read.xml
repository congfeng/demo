<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.UserRelationDao">
	
	<resultMap id="UserRelationRet" type="com.cf.code.entity.UserRelation">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="ut" column="ut" />
		<result property="userId" column="user_id" />
		<result property="opUserId" column="op_user_id" />
		<result property="isFriend" column="is_friend" />
		<result property="isOpFriend" column="is_op_friend" />
		<result property="isEnemy" column="is_enemy" />
	</resultMap>
	
	<select id="find" resultMap="UserRelationRet">
        SELECT *
          FROM user_relation
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="UserRelationRet" >
       SELECT *
         FROM user_relation
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="UserRelationRet" >
       SELECT *
         FROM user_relation
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM user_relation
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
	
</mapper>