<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MsgCollectDao">
	
	<resultMap id="MsgCollectRet" type="com.cf.code.entity.MsgCollect">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="userId" column="user_id" />
		<result property="msgId" column="msg_id" />
	</resultMap>
	
	<select id="find" resultMap="MsgCollectRet">
        SELECT *
          FROM msg_collect
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="MsgCollectRet" >
       SELECT *
         FROM msg_collect
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="MsgCollectRet" >
       SELECT *
         FROM msg_collect
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM msg_collect
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
	
</mapper>