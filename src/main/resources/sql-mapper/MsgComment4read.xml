<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MsgCommentDao">
	
	<resultMap id="MsgCommentRet" type="com.cf.code.entity.MsgComment">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="userId" column="user_id" />
		<result property="msgId" column="msg_id" />
		<result property="opUserId" column="op_user_id" />
		<result property="content" column="content" />
	</resultMap>

	<select id="find" resultMap="MsgCommentRet">
        SELECT *
          FROM msg_comment
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="MsgCommentRet" >
       SELECT *
         FROM msg_comment
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="MsgCommentRet" >
       SELECT *
         FROM msg_comment
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM msg_comment
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
	
</mapper>