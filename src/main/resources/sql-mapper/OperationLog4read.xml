<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.OperationLogDao">
	
	<resultMap id="OperationLogRet" type="com.cf.code.entity.OperationLog">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="userName" column="user_name" />
		<result property="relatedNo" column="related_no" />
		<result property="relatedName" column="related_name" />
		<result property="type" column="type" />
		<result property="status" column="status" />
		<result property="time" column="time" />
		<result property="desc" column="desc" />
	</resultMap>
	
	<select id="findLatest" resultMap="OperationLogRet">
        SELECT *
          FROM operation_log
         WHERE `type` = #{type}
           AND `status` = #{status}
           ORDER BY id DESC
           LIMIT 1
    </select>
    
</mapper>