<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MusicDao">
	
	<resultMap id="MusicRet" type="com.cf.code.entity.Music">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="author" column="author" />
		<result property="filename" column="filename" />
		<result property="filesize" column="filesize" />
		<result property="soundsize" column="soundsize" />
		<result property="category" column="category" />
		<result property="collects" column="collects" />
		<result property="plays" column="plays" />
	</resultMap>
	
	<select id="find" resultMap="MusicRet">
        SELECT *
          FROM music
         WHERE is_deleted = 0
           AND id = #{id,jdbcType=INTEGER}
    </select>
    
	<select id="queryLatestTime" resultType="int">
       SELECT IFNULL(MAX(u_t),0)
         FROM music
        <include refid="query_where" /> 
    </select>
    
    <select id="query1" resultMap="MusicRet" >
       SELECT *
         FROM music
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
    
    <select id="query2" resultMap="MusicRet" >
       SELECT *
         FROM music
        <include refid="query_where" />
        ORDER BY plays DESC,id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM music
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE is_deleted = 0
          AND category = #{category}
    </sql>
	
</mapper>