<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MusicDao">
	
	<resultMap id="MusicRet" type="com.cf.code.entity.Music">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="author" column="author" />
		<result property="size" column="size" />
		<result property="category" column="category" />
		<result property="collects" column="collects" />
	</resultMap>
	
	<select id="find" resultMap="MusicRet">
        SELECT *
          FROM music
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="MusicRet" >
       SELECT *
         FROM music
        <include refid="query_where" />
        ORDER BY id DESC
        LIMIT 10000
    </select>
    
    <select id="queryPage" resultMap="MusicRet" >
       SELECT *
         FROM music
        <include refid="query_where" />
        ORDER BY collects DESC,id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM music
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE category = #{category}
    </sql>
	
</mapper>