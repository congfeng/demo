<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MsgCommentDao">
	
	<insert id="insert" parameterType="com.cf.code.entity.MsgComment">
        INSERT INTO msg_comment(ct,user_id,msg_id,op_user_id,content)
        VALUES (UNIX_TIMESTAMP(NOW()),#{userId},#{msgId},#{opUserId},#{content})
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER" statementType="STATEMENT">
            select last_insert_id()
        </selectKey>
    </insert>
    
    <delete id="delete">
        DELETE FROM msg_comment WHERE id = #{id,jdbcType=INTEGER}
    </delete>
	
</mapper>