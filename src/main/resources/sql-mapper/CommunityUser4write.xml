<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.CommunityUserDao">
	
	<insert id="insert" parameterType="com.cf.code.entity.CommunityUser">
        INSERT INTO community_user(ct,status,user_id,community_id,role)
        VALUES (UNIX_TIMESTAMP(NOW()),#{status},#{userId},#{communityId},#{role})
        <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER" statementType="STATEMENT">
            select last_insert_id()
        </selectKey>
    </insert>
    
    <delete id="delete">
        DELETE FROM community_user WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    
    <update id="update">
        UPDATE community_user 
           SET role = #{role}
         WHERE id = #{id,jdbcType=INTEGER}
    </update>
    
    <update id="updateStatus">
        UPDATE community_user
           SET status = #{status}
         WHERE id = #{id,jdbcType=INTEGER}
    </update>
	
</mapper>