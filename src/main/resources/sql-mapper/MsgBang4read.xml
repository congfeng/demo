<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.MsgBangDao">
	
	<resultMap id="MsgBangRet" type="com.cf.code.entity.MsgBang">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="userId" column="user_id" />
		<result property="msgId" column="msg_id" />
	</resultMap>
	
	<select id="find" resultMap="MsgBangRet">
        SELECT *
          FROM msg_bang
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="MsgBangRet" >
       SELECT *
         FROM msg_bang
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="MsgBangRet" >
       SELECT *
         FROM msg_bang
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM msg_bang
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="msgId != null">AND msg_id = #{msgId}</if>
        <if test="userId != null">AND user_id = #{userId}</if>
    </sql>
	
</mapper>