<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.CommunityDao">
	
	<resultMap id="CommunityRet" type="com.cf.code.entity.Community">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
        <result property="ut" column="ut" />
        <result property="status" column="status" />
		<result property="userId" column="user_id" />
		<result property="nick" column="nick" />
		<result property="description" column="description" />
		<result property="portrait" column="portrait" />
		<result property="cover" column="cover" />
		<result property="limitNum" column="limit_num" />
	</resultMap>
	
	<select id="find" resultMap="CommunityRet">
        SELECT *
          FROM community
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="CommunityRet" >
       SELECT *
         FROM community
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="CommunityRet" >
       SELECT *
         FROM community
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM community
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
	
</mapper>