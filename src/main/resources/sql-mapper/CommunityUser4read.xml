<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.CommunityUserDao">
	
	<resultMap id="CommunityUserRet" type="com.cf.code.entity.CommunityUser">
		<result property="id" column="id" />
		<result property="ct" column="ct" />
		<result property="status" column="status" />
		<result property="userId" column="userId" />
		<result property="communityId" column="community_id" />
		<result property="role" column="role" />
	</resultMap>
	
	<select id="find" resultMap="CommunityUserRet">
        SELECT *
          FROM community_user
         WHERE id = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="query" resultMap="CommunityUserRet" >
       SELECT *
         FROM community_user
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT 100
    </select>
    
    <select id="queryPage" resultMap="CommunityUserRet" >
       SELECT *
         FROM community_user
        <include refid="query_where" />
        ORDER BY id ASC
        LIMIT #{start},#{size}
    </select>
  
    <select id="queryCount" resultType="int">
       SELECT COUNT(1)
         FROM community_user
        <include refid="query_where" /> 
    </select>
    
    <sql id="query_where">
        WHERE 1=1
        <if test="1 == 1">AND 1 = 1</if>
    </sql>
	
</mapper>